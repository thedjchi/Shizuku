<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:fitsSystemWindowsInsets="bottom|start|end"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@android:id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:paddingVertical="@dimen/margin_vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/DialogCard">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginTop="4dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_help_outline_24dp"
                android:tint="?colorOnSecondaryContainer"
                android:tintMode="src_in" />

            <TextView
                android:id="@android:id/summary"
                style="@style/TerminalTutorialText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:duplicateParentState="true"
                android:textColor="?colorOnSecondaryContainer"
                android:text="@string/terminal_apps_description" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/miui"
            style="@style/DialogCard"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="?colorErrorContainer"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginTop="4dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_warning_24"
                android:tint="?colorOnErrorContainer"
                android:tintMode="src_in" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="36dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:duplicateParentState="true"
                    android:text="@string/terminal_tutorial_miui"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="?colorOnErrorContainer" />

                <TextView
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:duplicateParentState="true"
                    android:text="@string/terminal_tutorial_miui_2"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="?colorOnErrorContainer" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_numeric_1_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/terminal_tutorial_1" />

                <Button
                    android:id="@android:id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/export"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_numeric_2_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text2"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/terminal_tutorial_2" />

                <TextView
                    android:id="@+id/command2"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:textIsSelectable="true"
                    android:textColor="?android:textColorSecondary"
                    android:fontFamily="monospace"
                    tools:text="@string/terminal_tutorial_3_command" />

                <TextView
                    android:id="@+id/summary2"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:textColor="?android:textColorSecondary"
                    tools:text="@string/terminal_tutorial_2_tip" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_numeric_3_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text3"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/terminal_tutorial_3" />

                <TextView
                    android:id="@+id/command3"
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:textIsSelectable="true"
                    android:textColor="?android:textColorSecondary"
                    android:fontFamily="monospace"
                    tools:text="@string/terminal_tutorial_3_command" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>