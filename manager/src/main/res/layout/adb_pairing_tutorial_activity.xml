<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:fitsSystemWindowsInsets="bottom|start|end"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:paddingVertical="@dimen/margin_vertical"
        android:showDividers="middle"
        android:divider="@drawable/spacing_list_item_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle"
            android:divider="@drawable/spacing_card_vertical"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/notification"
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="4dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_outline_info_24"
                    android:tint="?colorOnSecondaryContainer"
                    android:tintMode="src_in" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="36dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TerminalTutorialText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pairing_summary"
                        android:textAppearance="?textAppearanceBodyMedium"
                        android:textColor="?colorOnSecondaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/network"
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="4dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_help_outline_24dp"
                    android:tint="?colorOnSecondaryContainer"
                    android:tintMode="src_in" />

                <TextView
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="36dp"
                    android:duplicateParentState="true"
                    android:text="@string/pairing_battery_optimization"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="?colorOnSecondaryContainer" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/miui"
                style="@style/DialogCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="?colorErrorContainer"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_marginTop="4dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_warning_24"
                    android:tint="?colorOnErrorContainer"
                    android:tintMode="src_in" />

                <TextView
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="36dp"
                    android:duplicateParentState="true"
                    android:text="@string/pairing_miui_notifications"
                    android:textAppearance="?textAppearanceBodyMedium"
                    android:textColor="?colorOnErrorContainer" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:src="@drawable/ic_numeric_1_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TerminalTutorialText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pairing_tutorial_1" />

                <Button
                    android:id="@+id/developer_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/developer_options"
                    app:icon="@drawable/ic_outline_open_in_new_24"
                    app:iconPadding="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:src="@drawable/ic_numeric_2_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <TextView
                style="@style/TerminalTutorialText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/pairing_tutorial_2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:importantForAccessibility="no"
                android:padding="4dp"
                android:src="@drawable/ic_numeric_3_circle_outline_24"
                android:tint="?android:textColorSecondary"
                android:tintMode="src_in" />

            <TextView
                style="@style/TerminalTutorialText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/pairing_tutorial_3" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>