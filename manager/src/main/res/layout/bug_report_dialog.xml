<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:layout_marginBottom="48dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:overScrollMode="ifContentScrolls"
    android:paddingTop="?android:dialogPreferredPadding"
    android:paddingBottom="?android:dialogPreferredPadding"
    android:paddingStart="?android:dialogPreferredPadding"
    android:paddingEnd="?android:dialogPreferredPadding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_report_bug" />


        <TextView
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_before_reporting"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_update"
            android:layout_marginTop="16dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_button_update"
            app:icon="@drawable/ic_outline_open_in_new_24"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_wiki"
            android:layout_marginTop="16dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/wikiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_button_wiki"
            app:icon="@drawable/ic_outline_open_in_new_24"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_issues"
            android:layout_marginTop="16dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/issuesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_button_issues"
            app:icon="@drawable/ic_outline_open_in_new_24"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?colorOutline" />

        <TextView
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bug_report_dialog_method"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>